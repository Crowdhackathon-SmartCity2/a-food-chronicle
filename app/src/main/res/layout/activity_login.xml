<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/border_home">

    <LinearLayout
        android:id="@+id/email_password_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:padding="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <ImageView
            android:layout_width="285dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/slogan" />

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="280dp"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/border_login" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@android:color/transparent"
                    android:drawableStart="@drawable/email"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/line" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@android:color/transparent"
                    android:drawableStart="@drawable/password"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="15sp" />


            </LinearLayout>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/email_sign_in_button"
                android:layout_width="270dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop"
                android:src="@drawable/log_in"
                android:text="@string/sign_in"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@android:color/transparent"
                />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/new_here"
                android:layout_marginTop="25dp"
                android:scaleType="centerCrop"
                android:id="@+id/email_create_account_button"
                android:backgroundTint="@android:color/transparent"
                />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/forgot_pass"
                android:layout_marginTop="25dp"
                android:scaleType="centerCrop"
                android:id="@+id/tvForgotPassword"
                android:backgroundTint="@android:color/transparent"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:padding="30dp"
            android:src ="@drawable/icon_fork"
            android:scaleType="centerCrop"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/button_facebook_login"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="13dp"
            android:paddingTop="12dp" />

    </LinearLayout>
</LinearLayout>